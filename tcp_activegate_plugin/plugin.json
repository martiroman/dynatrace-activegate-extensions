{
  "name": "custom.remote.python.networkconnections",
  "version": "1.1.1",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "metricGroup": "tech.network",
  "processTypeNames": ["PYTHON"],
  "technologies": ["TCP Connection"],
  "favicon": "",
  "source": {
    "package": "tcp_activegate_plugin",
    "className": "NetworkConnectionsPluginRemote",
    "install_requires": ["requests>=2.6.0","paramiko"],
    "activation": "Remote"
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "tcp.established",
        "unit": "Count",
	"dimensions": ["service"],
        "displayname": "TCP Connectivity - Count Established"
      }
    },
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "tcp.time_wait",
        "unit": "Count",
	"dimensions": ["service"],
        "displayname": "TCP Connectivity - Count Time Wait"
      }
    }
  ],
    "properties" : [
    {
      "key" : "servername",
      "type" : "string"
    },
    {
      "key" : "ipservidor",
      "type" : "string"
    },
    {
      "key" : "usuario",
      "type" : "string"
    },
    {
      "key" : "password",
      "type" : "password"
    },
    {
      "key" : "puerto",
      "type" : "integer",
      "defaultValue": 22
    },
    {
      "key" : "patron",
      "type" : "string"
    },
    { "key": "ssh_key_file", 
    "type": "String" 
    },
    { "key": "ssh_key_passphrase", 
    "type": "Password" 
    }
  ],
  "configUI": {
        "displayName": "ActiveGate TCP Connections Extension",
        "properties": [
			{
      "key" : "servername",
      "displayName" :  "Nombre Servidor o Servicio",
      "displayHint": "Ingrese un nombre para identificar el servicio",
      "displayOrder": 1
      },
			{
			"key" : "ipservidor",
			"displayName" :  "IP Servidor",
			"displayHint": "Ingrese IP del servidor a monitorear",
      "displayOrder": 2
			},
      {
      "key" : "puerto",
      "displayName" :  "Puerto",
      "displayHint": "Default: 22",
      "displayOrder": 3
      },
			{
			"key" : "usuario",
			"displayName" :  "Usuario",
			"displayHint": "",
      "displayOrder": 4 
			},
			{
			"key" : "password",
			"displayName" :  "Password",
			"displayHint": "",
      "displayOrder": 5 
			},
			{
			"key" : "patron",
			"displayName" :  "Patron",
			"displayHint": "Separar por nombre de servicio con | y ,: Servicio1|104.18.29.219:525,Servicio2|localhost",
      "displayOrder": 6
			},
      {
        "key": "ssh_key_file",
        "displayName": "(Opcional) Private key file",
        "displayOrder": 7
    },
    {
        "key": "ssh_key_passphrase",
        "displayName": "(Opcional) Private key passphrase",
        "displayOrder": 9
    }
	  ]
    },
     "ui": {
       "keymetrics" : [
      {
        "key": "tcp.established",
        "aggregation": "avg",
        "mergeaggregation": "avg",
        "displayname": "Established"
      },
      {
        "key": "tcp.time_wait",
        "aggregation": "avg",
        "mergeaggregation": "avg",
        "displayname": "Time Wait"
      }
    ],
        "charts": [
            {
                "group": "Network Connections",
                "title": "Network Connections - TCP",
                "description": " - ",
                "explanation": " - ",
                "link": " - ",
                "series": [
                    {
                        "key": "tcp.established",
                        "displayname": "Established",
			"seriestype": "bar",
                        "stacked": true,
                        "color": "#00cc00"
                    },
		    {
                        "key": "tcp.time_wait",
                        "displayname": "Time Wait",
                        "seriestype": "bar",
                        "stacked": true,
                        "color": "#ff0000"
                    }
                ]
            }
        ]
    }
}
