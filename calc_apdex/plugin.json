{
  "name": "custom.remote.python.apdex",
  "metricGroup": "tech.apdex",
  "version": "1.37",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "technologies": ["APDEX"],
  "favicon": "",
  "source": {
    "package": "calc_apdex",
    "className": "ApdexPluginRemote",
    "install_requires": ["requests>=2.6.0","pandas", "numpy", "croniter"],
    "activation": "Remote"
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "apdex",
        "unit": "Count",
        "dimensions": ["name"],
        "displayname": "APDEX"
      }
    }
  ],
    "properties" : [
    {
      "key" : "metric",
      "type" : "string"
    },
    {
      "key" : "name",
      "type" : "string"
    },
    {
      "key" : "token",
      "type" : "string"
    },
    {
      "key" : "endpoint",
      "type" : "string"
    },
    {
      "key" : "schedule",
      "type" : "string"
    },
    {
      "key" : "timeframe",
      "type" : "string"
    }
  ],
  "configUI": {
        "displayName": "ActiveGate APDEX Extension",
        "properties": [
                        {
                        "key" : "metric",
                        "displayName" :  "Metrica APDEX",
                        "displayOrder" : 2,
                        "displayHint": "Ingrese la metrica a consultar. Ejemplo: calc:apps.web.sgi.sgiapdex"
                        },
                        {
                        "key" : "name",
                        "displayName" :  "Nombre Aplicacion",
                        "displayOrder" : 1,
                        "displayHint": "Ingrese el nombre de la aplicacion"
                        },
                        {
                        "key" : "token",
                        "displayName" :  "API Token",
                        "displayOrder" : 3,
                        "displayHint": "Scope: metrics.ingest + metrics.read"
                        },
                                                {
                        "key" : "endpoint",
                        "displayName" :  "API Endpoint",
                        "displayOrder" : 4,
                        "displayHint": "URL: "
                        },
                        {
                        "key" : "schedule",
                        "displayName": "(Opcional) Schedule",
                        "displayOrder": 5,
                        "displayHint": "Formato Cron. Ejemplo: */10 * * * *. (Default cada 1 minuto)"
                        },
                        {
                        "key" : "timeframe",
                        "displayName": "(Opcional) Timeframe",
                        "displayOrder": 6,
                        "displayHint": "Formato Dynatrace. Default: now-24h"
                        }
          ]
    },
     "ui": {
       "keymetrics" : [
      {
        "key": "apdex",
        "aggregation": "avg",
        "mergeaggregation": "avg",
        "displayname": "APDEX"
      }
    ],
        "charts": [
            {
                "group": "APDEX",
                "title": "APDEX",
                "description": " - ",
                "explanation": " - ",
                "link": " - ",
                "series": [
                    {
                        "key": "apdex",
                        "displayname": "APDEX",
                        "seriestype": "bar",
                        "stacked": true,
                        "color": "#00cc00"
                    }
                ]
            }
        ]
    }
}

