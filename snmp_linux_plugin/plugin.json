{
  "name": "custom.remote.python.linuxsnmpmetrics",
  "version": "0.1",
  "type": "python",
  "entity": "CUSTOM_DEVICE",
  "metricGroup": "tech.linux",
  "processTypeNames": ["PYTHON"],
  "technologies": ["Linux Metrics"],
  "favicon": "",
  "source": {
    "package": "linux_snmp_metrics_plugin",
    "className": "LinuxSnmpMetricsPluginRemote",
    "install_requires": ["pysnmp"],
    "activation": "Remote"
  },
  "metrics": [
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
      "key": "linux.cpu.usage",
      "unit": "Percent",
	    "dimensions": ["host"],
      "displayname": "Linux SNMP - CPU Usage"
      }
    },
    {
      "entity": "CUSTOM_DEVICE",
      "timeseries": {
        "key": "linux.memory",
        "unit": "Count",
	      "dimensions": ["host"],
        "displayname": "Linux SNMP - Memory"
      }
    }
  ],
    "properties" : [
    {
      "key" : "hostname",
      "type" : "string"
    },
    {
      "key" : "ip",
      "type" : "string"
    },
    {
      "key" : "community",
      "type" : "password"
    },
    {
      "key" : "port",
      "type" : "string",
      "defaultValue": "161"
    },
    {
      "key": "version", 
      "type": "Dropdown", 
      "dropdownValues": [ "v1", "v2c" ], "defaultValue": "v2c" 
    }
  ],
  "configUI": {
        "displayName": "Linux SNMP Metrics",
        "properties": [
			{
      "key" : "hostname",
      "displayName" :  "Nombre Servidor",
      "displayHint": "Ingrese un nombre para identificar el servidor",
      "displayOrder": 1
      },
      {
      "key" : "ip",
      "displayName" :  "IP Servidor",
      "displayHint": "Ingrese IP del servidor a monitorear",
      "displayOrder": 2
			},
      {
      "key" : "port",
      "displayName" :  "Puerto",
      "displayHint": "Default: 161",
      "displayOrder": 3
      },
      {
	    "key" : "community",
	    "displayName" :  "Community",
      "displayOrder": 4 
      }
    ]
    },
    "ui": {
      "keymetrics" : [
     {
       "key": "linux.cpu.usage",
       "aggregation": "avg",
       "mergeaggregation": "avg",
       "displayname": "CPU Usage"
     },
     {
       "key": "linux.memory",
       "aggregation": "avg",
       "mergeaggregation": "avg",
       "displayname": "Memory"
     }
   ],
       "charts": [
           {
               "group": "SNMP Linux Metrics",
               "title": "CPU Usage",
               "description": " - ",
               "explanation": " - ",
               "link": " - ",
               "series": [
                   {
                       "key": "linux.cpu.usage",
                       "displayname": "CPU Usage",
                       "seriestype": "bar",
                       "stacked": false,
                       "color": "#00cc00"
                   }
               ]
           },
           {
            "group": "SNMP Linux Metrics",
            "title": "Memory",
            "description": " - ",
            "explanation": " - ",
            "link": " - ",
            "series": [
                {
                    "key": "linux.memory",
                    "displayname": "Memory",
                    "seriestype": "bar",
                    "stacked": false,
                    "color": "#00cc00"
                }
            ]
        }
       ]
   }
}
